<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <ImageView android:id="@+id/main_login_iv_brandimage"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/iv_brandimage"
               android:tint="#8c000000"
               android:scaleType="fitXY"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/main_login_tv_phone_num"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/nanum_square_r"
              android:textSize="24sp"
              android:text="휴대전화 번호를 입력해 주세요."
              android:textColor="#f9fafe"
              android:layout_marginTop="349dp"
              android:layout_centerHorizontal="true"
    />
    <EditText android:id="@+id/main_login_et_login"
              android:layout_width="261dp"
              android:layout_height="45dp"
              android:background="#ffffff"
              android:layout_below="@id/main_login_tv_phone_num"
              android:layout_marginTop="32dp"
              android:layout_marginLeft="487dp"
              android:paddingLeft="17dp"
              android:fontFamily="@font/nanum_square_r"
              android:textSize="20sp"
              android:inputType="phone"
              android:maxLength="11"
              android:textColor="#353535"
              android:hint="010 ( - 제외하고 입력)"
              android:textColorHighlight="#b5b5b5"/>

    <ImageView android:id="@+id/main_login_iv_check"
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:src="@drawable/check"
               android:layout_toRightOf="@id/main_login_et_login"
               android:layout_below="@id/main_login_tv_phone_num"
               android:layout_marginTop="32dp"
               android:paddingLeft="15.8dp"
               android:paddingRight="14.8dp"
               android:paddingTop="15.6dp"
               android:paddingBottom="16dp"
               android:background="#e2e2e2"/>

</RelativeLayout>