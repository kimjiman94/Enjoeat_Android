<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.BeforeOrderHomeActivity">
    <RelativeLayout android:layout_width="204dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/enjoeat"
                   android:layout_marginStart="55dp"
                   android:layout_marginTop="76dp"/>
        <LinearLayout android:id="@+id/before_order_tab_home"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="50dp"
                      android:layout_marginTop="187dp"
                      android:orientation="horizontal">
            <ImageView android:id="@+id/ic_tab_home"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_tab_home_red"/>
            <TextView android:id="@+id/tv_tab_home"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginStart="11.6dp"
                      android:includeFontPadding="false"
                      android:lineSpacingExtra="3sp"
                      android:fontFamily="@font/nanum_square_eb"
                      android:textSize="18sp"
                      android:textColor="#ff3f2c"
                      android:text="홈"/>
            <ImageView android:id="@+id/iv_tab_home_redbar"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="102dp"
                       android:src="@drawable/tab_redbar"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/before_order_tab_menu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="51dp"
                      android:layout_below="@id/before_order_tab_home"
                      android:layout_marginTop="41dp"
                      android:orientation="horizontal">
            <ImageView android:id="@+id/ic_tab_menu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_tab_menu"/>
            <TextView android:id="@+id/tv_tab_menu"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginStart="11.6dp"
                      android:includeFontPadding="false"
                      android:lineSpacingExtra="3sp"
                      android:fontFamily="@font/nanum_square_b"
                      android:textSize="18sp"
                      android:textColor="#5f5f5f"
                      android:text="메뉴판"/>
            <ImageView android:id="@+id/iv_tab_menu_redbar"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="71dp"
                       android:visibility="invisible"
                       android:src="@drawable/tab_redbar"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/before_order_tab_mypage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/before_order_tab_menu"
                      android:layout_marginStart="52dp"
                      android:layout_marginTop="40dp"
                      android:orientation="horizontal">
            <ImageView android:id="@+id/ic_tab_mypage"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_tab_mypage"
            />
            <TextView android:id="@+id/tv_tab_mypage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginStart="11.6dp"
                      android:includeFontPadding="false"
                      android:lineSpacingExtra="3sp"
                      android:fontFamily="@font/nanum_square_b"
                      android:textSize="18sp"
                      android:textColor="#5f5f5f"
                      android:text="마이 페이지"/>
            <ImageView android:id="@+id/iv_tab_mypage_redbar"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="34dp"
                       android:visibility="invisible"
                       android:src="@drawable/tab_redbar"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#f8f8f8">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="50dp"
                       android:layout_marginTop="21dp"
                       android:src="@drawable/seoga_cook"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="722dp"
                       android:layout_marginTop="28dp"
                       android:src="@drawable/ic_statusbar_wifi"/>

            <TextView android:id="@+id/tv_wifi_password"
                      android:layout_width="101dp"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="752dp"
                      android:layout_marginTop="27dp"
                      android:singleLine="true"
                      android:ellipsize="marquee"
                      android:includeFontPadding="false"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:fontFamily="@font/nanum_square_b"
                      android:textSize="16sp"
                      android:textColor="#646464"
                      android:letterSpacing="0.01"
                      android:lineSpacingExtra="1sp"
                      android:text="20180546233"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_statusbar_playlist"
                       android:layout_toRightOf="@id/tv_wifi_password"
                       android:layout_marginStart="22dp"
                       android:layout_marginTop="25dp"/>
            <TextView android:id="@+id/tv_playlist"
                      android:layout_width="125dp"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@id/tv_wifi_password"
                      android:layout_marginStart="52dp"
                      android:layout_marginTop="27dp"
                      android:singleLine="true"
                      android:ellipsize="marquee"
                      android:includeFontPadding="false"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:fontFamily="@font/nanum_square_b"
                      android:textSize="16sp"
                      android:textColor="#646464"
                      android:letterSpacing="0.01"
                      android:lineSpacingExtra="1sp"
                      android:text="그의 바다 - 백예린"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#aaaaaa"
                  android:layout_marginStart="51dp"
                  android:layout_marginTop="69dp"
                  android:layout_marginEnd="51dp"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                     android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>
</LinearLayout>