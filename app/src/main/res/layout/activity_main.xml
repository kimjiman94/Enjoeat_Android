<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainActivity">

    <ImageView android:id="@+id/init_main_iv_brandimage"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="fitXY"
               android:src="@drawable/iv_brandimage"
               android:tint="#8c000000"/>

    <ImageView android:id="@+id/init_main_tv_brandname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/tv_brandname"
               android:layout_marginLeft="100dp"
               android:layout_marginTop="342.6dp"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="608dp"
               android:layout_marginLeft="589dp"
               android:src="@drawable/btn_screentouch_2"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/btn_screentouch_1"
               android:layout_marginTop="616dp"
               android:layout_marginLeft="597dp"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/screen_touch"
               android:layout_marginTop="660.6dp"
               android:layout_marginLeft="633dp"/>

    <View android:id="@+id/init_main_v_screen_touch"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#00000000"/>
</RelativeLayout>